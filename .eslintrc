{
  "extends": ["./node_modules/rete-cli/.eslintrc"],
  "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "JSX": true
  },
  "rules": {
    "max-len": ["warn", { "code": 140 }],
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "default",
        "format": ["camelCase"]
      },
      {
        "selector": "variable",
        "format": ["camelCase", "PascalCase", "UPPER_CASE"]
      },
      {
        "selector": "function",
        "format": ["camelCase", "PascalCase"]
      },
      {
        "selector": "typeLike",
        "format": ["PascalCase"]
      },
      {
        "selector": "enumMember",
        "format": ["UPPER_CASE"]
      },
      {
        "selector": "typeProperty",
        "format": ["camelCase", "PascalCase"]
      }
    ]
  }
}
